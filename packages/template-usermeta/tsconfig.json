{
    "extends": "@deneb-viz/typescript-config/base.json",
    "compilerOptions": {
        // Allow type-only imports that resolve outside of src/ without TS6059 rootDir errors.
        // rootDir removed so declaration build can include mapped type definition files.
        "outDir": "dist/src",
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
